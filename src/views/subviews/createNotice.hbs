<div class="uk-width-1-1 nopadding page-right-content"  ng-controller="noticesCtrl">
    <div class="uk-grid page-title noshadow dt-borderBottom">
        <div class="uk-width-4-10 left" style="padding-left: 20px !important;">
            <p>{{title}}</p>
        </div>
        <div class="uk-width-6-10 pagination nomargin nopadding">
            <ul class="button-group" style="float: right !important;">
                <li class="pagination">
                    <a href="/notices" class="btn md-btn-wave-light" style="border-radius: 3px; margin-right: 5px;">Cancel</a>
                </li>
                <li class="pagination">
                    <a href="#" class="no-ajaxy btn btn-success md-btn-wave-light" style="border-radius: 3px;" ng-click="submitCreateNoticeForm()">Save</a>
                </li>
            </ul>
        </div>
        <!--<p class="left">{{title}}</p>-->
        <!--<div class="right">-->
            <!--<ul class="button-group">-->
                <!--<li><a href="/notices" role="button" class="btn">Cancel</a></li>-->
                <!--<li class="active"><button class="btn" ng-click="submitCreateNoticeForm()">Save</button>-->
                <!--</li>-->
            <!--</ul>-->
        <!--</div>-->
    </div>
    <!--Content Here-->
    <div class="full-height page-right-content scrollable">
        <div class="">
            <div class="uk-width-1-1" style="padding: 25px;">
                <form id="createNoticeForm" class="uk-form-stacked" action="/" method="POST">
                    <div>
                        <div class="uk-margin-medium-bottom">
                            <label for="nName">Notice Name</label>
                            <input id="nName" name="nName" type="text" class="md-input"/>
                        </div>

                        <div class="uk-margin-medium-bottom">
                            <label for="nMessage">Notice Message</label>
                            <input id="nMessage" name="nMessage" type="text" class="md-input"/>
                        </div>

                        <div class="uk-clearfix" style="">
                            <p class="left" style="
                                padding-top: 3px;
                                margin-right: 15px;
                                font-size: 14px;
                                font-weight: 400;
                                color: #2c3e50;
                                display: inline-block;">Alert Window: </p>
                            <div class="onoffswitch onSwitch left">
                                <input type="checkbox" name="nAlertWindow" class="onoffswitch-checkbox" id="nAlertWindow" >
                                <label class="onoffswitch-label" for="nAlertWindow">
                                    <span class="onoffswitch-inner onSwitch-inner"></span>
                                    <span class="onoffswitch-switch onSwitch-switch"></span>
                                </label>
                            </div>
                        </div>

                        <div class="uk-clearfix" style="display: block;">
                            <label for="nFontColor" style="margin-right: 33px;">Font Color:</label>
                            <select id="nFontColor" name="nFontColor">
                                <option value="#f6f6f6">White</option>
                                <option value="#000000">Black</option>
                            </select>
                        </div>

                        <div style="margin-bottom: 85px;">
                            <label for="nColor" style="margin-right: 22px;">Notice Color:</label>
                            <select id="nColor" name="nColor">
                                <option value="#7bd148">Green</option>
                                <option value="#5484ed">Bold blue</option>
                                <option value="#a4bdfc">Blue</option>
                                <option value="#46d6db">Turquoise</option>
                                <option value="#7ae7bf">Light green</option>
                                <option value="#51b749">Bold green</option>
                                <option value="#fbd75b">Yellow</option>
                                <option value="#ffb878">Orange</option>
                                <option value="#ff887c">Red</option>
                                <option value="#dc2127">Bold red</option>
                                <option value="#dbadff">Purple</option>
                                <option value="#e1e1e1">Gray</option>
                            </select>
                        </div>


                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{#contentFor 'js-plugins'}}

